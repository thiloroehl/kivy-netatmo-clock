<Label>:
    font_name: 'Roboto'
    font_size: 35
    markup: True

<RobotoButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold: True
    background_normal: 'button_normal.png'
    background_down: 'button_down.png'
    border: (2, 2, 2, 2)

BoxLayout:
    orientation: 'vertical'

    Label:
        id: time
        text: 'Starting...'
        font_size: 60
    Label:
    	id: outsidetemp
    	text: "-"
    Label:
        id: humidity
        text: "-"
    Label:
        id: status2
        text: "-"
    Label:
    	id: status
    	text: "-"
    	font_size: 25
    	
    	
    
    BoxLayout:
        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)
        

        
        RobotoButton:
            id: reset
            text: 'Licht aus'
            on_press: app.reset()
            background_normal: 'red_button_normal.png'
            background_down: 'red_button_down.png'
		
		RobotoButton:
            id: start_music
            text: 'Musik an'
            on_press: app.start_stop()
        
        RobotoButton:
            id: stop_music
            text: 'Musik aus'
            on_press: app.start_stop()
		
		
		RobotoButton:
            id: debug
            text: 'Debug'
            on_press: app.start_debug()
		
         
        RobotoButton:
            id: restart
            text: 'Restart'
            on_press: app.stop()
            
            

