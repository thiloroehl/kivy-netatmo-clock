<Label>:
    font_name: 'Roboto'
    font_size: 35
    markup: True

<RobotoButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold: True
    background_normal: 'button_normal.png'
    background_down: 'button_down.png'
    border: (2, 2, 2, 2)

BoxLayout:
    orientation: 'vertical'

    Label:
        id: time
        text: '[b]00[/b]:00:00'
        font_size: 60
    Label:
        id: outsidetemp
        text: "20 C"
    Label:
        id: humidity
        text: "0% Humidity"
    Label:
    	id: alarmstatus
    	text: "ok"
    Label:
    	id: status
    	text: "Starting..."
    	font_size: 25
    	
    	
    
    BoxLayout:
        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)

        RobotoButton:
            id: start_stop
            text: 'Licht an'
            on_press: app.start_stop()

        RobotoButton:
            id: reset
            text: 'Licht aus'
            on_press: app.reset()
            background_normal: 'red_button_normal.png'
            background_down: 'red_button_down.png'
		
		RobotoButton:
            id: start_music
            text: 'Musik an'
            on_press: app.start_stop()
		
         
        RobotoButton:
            id: restart
            text: 'Restart'
            on_press: app.stop()
            
            

